<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/soft_blue" />
            <stroke
                android:width="2dp"
				android:color="@color/black" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp"  />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <padding
                android:left="7dp"
				android:top="7dp"
				android:right="7dp"
				android:bottom="7dp"  />
        </shape>
    </item>
    
    
</selector>