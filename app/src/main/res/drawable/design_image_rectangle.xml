<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

        <stroke
                android:width="1dp"
                android:color="@color/black" />

            <corners
                android:bottomLeftRadius="7dp"
                android:bottomRightRadius="7dp"
                android:topLeftRadius="7dp" 
                android:topRightRadius="7dp" />
            
			<padding 
        		android:left="10dp"
        		android:top="10dp"
        		android:right="10dp"
        		android:bottom="10dp" />

		<gradient
			android:centerColor="@color/white"
			android:endColor="@color/soft_blue"
			android:gradientRadius="300"
			android:startColor="@color/white"
			android:type="radial" >
		</gradient>

			
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
           
			<stroke
                android:width="1dp"
                android:color="@color/black" />
			
            <corners
                android:bottomLeftRadius="7dp"
                android:bottomRightRadius="7dp"
                android:topLeftRadius="7dp"
                android:topRightRadius="7dp" />

   			<padding 
        		android:left="10dp"
        		android:top="10dp"
        		android:right="10dp"
        		android:bottom="10dp" />


		<gradient
			android:angle="270"
			android:endColor="@color/white"
			android:startColor="@color/white" />


        </shape></item>

</selector>